# cc_binary for simple C++ tests
load(
    "@rules_cc//cc:defs.bzl",
    "cc_binary",
    "cc_library",
)

load(
    "@bazel_codechecker//src:codechecker.bzl",
    "codechecker_test",
)

# We are not interested in finding bugs, we are only interested in whether the
# analysis re-runs after the files have been modified. As such, these files emit no
# warnings.

cc_library(
    name = "linking",
    hdrs = ["linking.h"],
)

cc_library(
    name = "secondary",
    srcs = ["secondary.cc"],
    deps = ["linking"],
)

cc_binary(
    name = "primary",
    srcs = ["primary.cc"],
    deps = [
        "secondary",
        "linking"
    ],
)

codechecker_test(
    name = "per_file_caching",
    targets = [
        "primary",
    ],
    per_file = True,
)

codechecker_test(
    name = "per_file_caching_ctu",
    targets = [
        "primary",
    ],
    analyze = ["--ctu"],
    per_file = True,
)
